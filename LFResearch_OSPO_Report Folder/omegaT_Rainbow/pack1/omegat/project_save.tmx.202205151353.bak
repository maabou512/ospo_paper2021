    <tu>
      <tuv lang="en-US">
        <seg>Prefers holistic approach</seg>
      </tuv>
      <tuv lang="ja-JP" changeid="tani" changedate="20220515T030903Z" creationid="tani" creationdate="20220312T081241Z">
